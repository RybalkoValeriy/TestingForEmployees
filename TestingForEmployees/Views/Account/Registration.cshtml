@using TestingForEmployees.ViewModels
@model RegisterViewModel

<div class="container">
    <h1>Форма реєстрації в системі тестування:</h1>
    <div class="row">
        <form method="post" asp-controller="Account" asp-action="Registration" asp-antiforgery="true">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Особисті дані</div>
                    <div class="panel-body">

                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" placeholder="Введіть прізвище" class="form-control" />
                            <span asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" placeholder="Введіть своє ім'я" class="form-control" />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MiddleName"></label>
                            <input asp-for="MiddleName" placeholder="Введіть по батькові" class="form-control" />
                            <span asp-validation-for="MiddleName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IDBranch"></label>
                            <select class="form-control" asp-for="IDBranch" asp-items="ViewBag.Branch" required></select>
                            <span asp-validation-for="IDBranch"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class='col-lg-6'>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-user"></span>
                        Картка для входу
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="LoginUser"></label>
                            <input asp-for="LoginUser" placeholder="Ваш логін (запамя'тайте) 6 символів" class="form-control" />
                            <span asp-validation-for="LoginUser"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" placeholder="Пароль (запамя'тайте) 6 символів" class="form-control" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirm"></label>
                            <input asp-for="PasswordConfirm" placeholder="Підтверження паролю" class="form-control" />
                            <span asp-validation-for="PasswordConfirm"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <button type="submit" class="btn btn-primary">Зареєструватись в системі</button>
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        </form>

    </div>
</div>

