@using TestingForEmployees.ViewModels
@model LogInViewModel

<div class="container">
    <h1>Вхід до системи тестування:</h1>
    <div class="row">
        <form method="post" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-user">
                        </span>  Картка для входу
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="Login"></label>
                            <input asp-for="Login" placeholder="Ваш логін" class="form-control" />
                            <span asp-validation-for="Login"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" placeholder="Пароль" class="form-control" />
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-20">
                    <button type="submit" class="btn btn-primary">Вхід до системи</button>
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
        </form>
    </div>
</div>
