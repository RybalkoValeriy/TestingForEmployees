@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Полтавське тестування співробітників</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/brSwich.css" />
        <link rel="stylesheet" href="~/css/pickmeup.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/brSwich.css" />
        <link rel="stylesheet" href="~/css/pickmeup.css" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/images/site-logo.png" /></a>
                    }
                }
            </div>
            <div class="navbar-collapse collapse">
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav">
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Головна</a></li>
                        </ul>
                    }
                }
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            if (Context.User.IsInRole("admin"))
                            {
                                <li>
                                    <a asp-area="" asp-controller="Admin" asp-action="UsersControl">
                                        Панель адміністрування
                                        <span class="glyphicon glyphicon-th-large"></span>
                                    </a>
                                </li>
                            }
                            <li id="profiles">
                                <span class="glyphicon glyphicon-user">
                                </span>
                                @TestingForEmployees.Util.GetValueOfClaimsUsers.GetValue(User.Claims, "fio")
                                [ @User.Identity.Name ]
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Account" asp-action="SignOut">
                                    Вихід
                                    <span class="glyphicon glyphicon-log-out"></span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-area="" asp-controller="Account" asp-action="Login">
                                    Вхід
                                    <span class="glyphicon glyphicon-log-in"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Account" asp-action="Registration">
                                    Реєстрація
                                    <span class="glyphicon glyphicon-user"></span>
                                </a>
                            </li>
                        }
                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
            <ul class="nav navbar-nav">
                <li>
                    <a asp-area="" asp-controller="Admin" asp-action="UsersControl">Облікові записи користувачів</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Admin" asp-action="TitleTest">Теми тестування</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Admin" asp-action="Question">Нові питання</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Admin" asp-action="Result">Результати</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <hr />
            <p>&copy; 2017 - Зроблено відділом IT <br />Полтавське обласне управління АТ "Ощадбанк"</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/bootpopup.js"></script>
    </environment>
    <environment names="Staging,Production">
        @*<script src="~/lib/jquery/dist/jquery.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>*@
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/bootpopup.js"></script>
        <script src="~/js/site.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
